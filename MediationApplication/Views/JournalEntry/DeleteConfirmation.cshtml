@model MediationApplication.Models.JournalEntryDto

@{
    ViewBag.Title = "DeleteConfirmation";
}

<nav class="subNav">
    <a class="backLink" href="/JournalEntry/List">Cancel</a>
</nav>

<div class="delConfirm">
    <h2>Confirm Deleteion</h2>

    <p class="delPara">Are you sure you want to delete the journal entry for <strong class="delTxt">@Model.SessionDate.ToString("dddd, MMMM dd, yyyy")</strong>?</p>

    <form action="/JournalEntry/Delete/@Model.JournalEntryID" method="POST">
        <button class="btn deleteBtn" type="submit">Confirm Delete</button>
    </form>
</div>