@model IEnumerable<MediationApplication.Models.MeditationSessionDto>
@{
    ViewBag.Title = "List";
}

<a href="/MeditationSession/New">Add Session</a>

<h2>Meditation Sessions</h2>

<div>
    @foreach (var session in Model)
    {
        <h3><a href="/MeditationSession/Details/@session.SessionID">@session.SessionDate.ToString("dddd, MMMM dd, yyyy")</a></h3>
        <div>
            <p>@session.SessionStartTime.ToString("hh:mm") to @session.SessionEndTime.ToString("hh:mm")</p>
            <p>Duration: @session.SessionDuration</p>
        </div>
    }
</div>
