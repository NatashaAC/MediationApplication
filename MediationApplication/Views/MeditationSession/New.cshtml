@model IEnumerable<MediationApplication.Models.MantraDto>

@{
    ViewBag.Title = "Create";
}

<h2>Add a Session</h2>

<form class="container-fluid" action="/Meditationsession/Create" method="POST">
    <div class="input-group">
        <label for="date">Date</label><span class="reqMark">*</span>
        <input id="date" type="date" name="SessionDate" data-val="true" data-val-required="Please select a date" />

        <span class="field-validation-valid text-danger" data-valmsg-for="SessionDate" data-valmsg-replace="true"></span>
    </div>
    <div>
        <label for="startTime">Start Time</label><span class="reqMark">*</span>
        <input id="startTime" type="time" name="SessionStartTime" data-val="true" data-val-required="Please select a start time" />

        <span class="field-validation-valid text-danger" data-valmsg-for="SessionStartTime" data-valmsg-replace="true"></span>
    </div>
    <div>
        <label for="endTime">End Time</label><span class="reqMark">*</span>
        <input id="endTime" type="time" name="SessionEndTime" data-val="true" data-val-required="Please select a end time" />

        <span class="field-validation-valid text-danger" data-valmsg-for="SessionEndTime" data-valmsg-replace="true"></span>
    </div>
    <div>
        <label for="duration">Duration</label><span class="reqMark">*</span>
        <select id="duration" name="SessionDuration" data-val="true" data-val-required="Please select a duration">
            <option>---Select a duration---</option>
            <option value="30">30 minutes</option>
            <option value="1">1 hour</option>
            <option value="2">2 hours</option>
        </select>

        <span class="field-validation-valid text-danger" data-valmsg-for="SessionDuration" data-valmsg-replace="true"></span>
    </div>
    <div>
        <label for="mantra">Mantra</label>
        <select id="mantra" name="MantraID">
            @foreach (var mantras in Model)
            {
                <option value="@mantras.MantraID">@mantras.MantraName</option>
            }
        </select>
    </div>
    <button class="btn formBtn" type="submit">Add</button>
</form>
