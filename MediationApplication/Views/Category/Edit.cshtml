@model MediationApplication.Models.CategoryDto

@{
    ViewBag.Title = "Edit";
}

<nav class="subNav">
    <a class="backLink" href="/Category/List">Cancel</a>
</nav>

<h2>Update a Category</h2>

<form class="container-fluid" action="/Category/Update/@Model.CategoryID" method="POST">
    <div style="display: none;">
        <input type="number" name="CategoryID" value="@Model.CategoryID" />

    </div>
    <div>
        <label for="categoryname">Name</label>
        <input id="categoryname" type="text" name="CategoryName" value="@Model.CategoryName" data-val="true" data-val-required="Please type in a category name!" />

        <span class="field-validation-valid text-danger" data-valmsg-for="CategoryName" data-valmsg-replace="true"></span>
    </div>
    <div>
        <div>
            <label for="categorydescription">Description</label>
        </div>
        <textarea id="categorydescription" cols="40" rows="5" name="CategoryDescription" data-val="true" data-val-required="Please type in a description!">@Model.CategoryDescription</textarea>

        <span class="field-validation-valid text-danger" data-valmsg-for="CategoryDescription" data-valmsg-replace="true"></span>
    </div>
    <div>
        <label for="categorycolour">Colour</label>
        <input id="categorycolour" type="color" name="CategoryColour" value="@Model.CategoryColour" />
    </div>
    <button class="btn formBtn" type="submit">Update Category</button>
</form>
